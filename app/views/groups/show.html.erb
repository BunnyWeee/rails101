<h1>群組文章</h1>

<h2><%= @group.title %></h2>
<p><%= @group.description %></p>
<div>
  <%= link_to "編輯群組", edit_group_path(@group) %>
  <%= link_to "新增貼文", new_group_post_path(@group) %>
</div>

<table>
  <thead>
    <tr>
      <td>貼文內容</td>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td><%= post.content %></td>
      <td>
        <%= link_to "編輯貼文", edit_group_post_path(post.group, post) %>
        <%= link_to "刪除貼文", group_post_path(post.group, post),
            method: "delete",
            data: { confirm: "確定刪除這則貼文嗎？" } %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>